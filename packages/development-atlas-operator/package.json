{
  "authors": [
    "Yuriy Yarosh <yuriy@yarosh.dev>"
  ],
  "description": "Sumicare Atlas Operator Chart",
  "devDependencies": {
    "@sumicare/images": "workspace:*",
    "@sumicare/versioning": "workspace:*",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=25"
  },
  "name": "@sumicare/charts-development-atlas-operator",
  "packageManager": "yarn@4.10.3",
  "private": true,
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "format": "run-p 'format:*'",
    "format:go": "golangci-lint run --fix",
    "format:opentofu": "tofu fmt -recursive .",
    "generate": "versioning sync",
    "lint": "run-s 'lint:*'",
    "lint:go": "golangci-lint run",
    "lint:opentofu": "run-s 'lint:opentofu:*'",
    "lint:opentofu:checkov": "checkov --skip-path '(?i)dockerfile\\.tpl$' --quiet --compact --directory .",
    "lint:opentofu:terrascan": "terrascan scan -t k8s,docker -v -d . || true",
    "lint:opentofu:tflint": "run-s 'lint:opentofu:tflint:*'",
    "lint:opentofu:tflint:atlas-operator-chart": "tflint --chdir modules/atlas-operator-chart",
    "lint:opentofu:tflint:atlas-operator-crds": "tflint --chdir modules/atlas-operator-crds",
    "lint:opentofu:tflint:atlas-operator-image": "tflint --chdir modules/atlas-operator-image",
    "lint:opentofu:trivy": "trivy config --severity CRITICAL,HIGH --skip-files '**/*.tpl' .",
    "lint:opentofu:validate": "tofu validate",
    "test": "ginkgo run -v ./..."
  },
  "type": "module",
  "version": "1.0.0",
  "versions": {
    "atlasOperator": "0.7.13"
  }
}
