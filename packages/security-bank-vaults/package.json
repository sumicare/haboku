{
  "authors": [
    "Yuriy Yarosh <yuriy@yarosh.dev>"
  ],
  "description": "Sumicare Bank Vaults Chart",
  "devDependencies": {
    "@sumicare/images": "workspace:*",
    "@sumicare/versioning": "workspace:*",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=25"
  },
  "files": [
    "modules/**/*"
  ],
  "name": "@sumicare/bank-vaults",
  "packageManager": "yarn@4.10.3",
  "private": true,
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "format": "run-p 'format:*'",
    "format:go": "golangci-lint run --fix",
    "format:opentofu": "tofu fmt -recursive .",
    "generate": "versioning sync",
    "lint": "run-s 'lint:*'",
    "lint:go": "golangci-lint run",
    "lint:opentofu": "run-s 'lint:opentofu:*'",
    "lint:opentofu:checkov": "checkov --skip-path '(?i)dockerfile\\.tpl$' --quiet --compact --directory .",
    "lint:opentofu:terrascan": "terrascan scan -t k8s,docker -v -d . || true",
    "lint:opentofu:tflint": "run-s 'lint:opentofu:tflint:*'",
    "lint:opentofu:tflint:bank-vaults-operator-chart": "tflint --chdir modules/bank-vaults-operator-chart",
    "lint:opentofu:tflint:bank-vaults-operator-image": "tflint --chdir modules/bank-vaults-operator-image",
    "lint:opentofu:tflint:bank-vaults-webhook-chart": "tflint --chdir modules/bank-vaults-webhook-chart",
    "lint:opentofu:tflint:bank-vaults-webhook-image": "tflint --chdir modules/bank-vaults-webhook-image",
    "lint:opentofu:tflint:openbao-chart": "tflint --chdir modules/openbao-chart",
    "lint:opentofu:tflint:openbao-image": "tflint --chdir modules/openbao-image",
    "lint:opentofu:trivy": "trivy config --severity CRITICAL,HIGH --skip-files '**/*.tpl' .",
    "lint:opentofu:validate": "tofu validate",
    "test": "ginkgo run -v ./..."
  },
  "type": "module",
  "version": "1.0.0",
  "versions": {
    "bankVaults": "1.23.0",
    "bankVaultsOperator": "1.23.0",
    "bankVaultsWebhook": "0.3.0",
    "openbao": "2.4.4"
  }
}
