{
  "authors": [
    "Yuriy Yarosh <yuriy@yarosh.dev>"
  ],
  "description": "Sumicare terraform-kubernetes-modules",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@devcontainers/cli": "0.80.2",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/exec": "7.1.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/npm": "13.1.2",
    "@semantic-release/release-notes-generator": "14.1.0",
    "@types/node": "24.10.1",
    "commitizen": "^4.3.1",
    "cspell": "^9.3.2",
    "cz-conventional-changelog": "^3.3.0",
    "gitleaks": "^1.0.0",
    "husky": "^9.1.7",
    "remeda": "^2.32.0",
    "semantic-release": "^25.0.2",
    "turbo": "2.6.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=25"
  },
  "name": "@sumicare/terraform-kubernetes-modules",
  "packageManager": "yarn@4.12.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sumicare/terraform-kubernetes-modules"
  },
  "scripts": {
    "build": "turbo run build --parallel",
    "commit": "cz",
    "format": "turbo run format format:shfmt --parallel",
    "format:shfmt": "shfmt -w -i 2 -ci ./scripts/*.sh packages/**/scripts/*.sh",
    "generate": "turbo run generate --parallel",
    "lint": "turbo run lint lint:biome lint:commitlint lint:shellcheck lint:gitleaks spellcheck --parallel",
    "lint:biome": "biome lint --fix --unsafe",
    "lint:commitlint": "commitlint --from HEAD~2 --to HEAD --verbose",
    "lint:gitleaks": "gitleaks detect -v",
    "lint:shellcheck": "shellcheck ./scripts/*.sh packages/**/scripts/*.sh",
    "prepare": "husky",
    "spellcheck": "./scripts/spellcheck.sh",
    "spellcheck:add": "./scripts/spellcheck_add.sh",
    "test": "turbo run test --parallel",
    "update:snapshots": "turbo run update:snapshots --parallel",
    "update:versions": "turbo run update:versions --parallel",
    "update:versions:go": "go list -f '{{.Dir}}' -m | xargs -I {} sh -c 'cd {} && go get -t -u ./... && go mod tidy' && go work sync"
  },
  "type": "module",
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ]
}
